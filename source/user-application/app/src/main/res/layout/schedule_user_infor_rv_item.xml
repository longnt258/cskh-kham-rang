<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#92FFFFFF"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#92FFFFFF">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#92FFFFFF">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DoctorName"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDocsName"
                android:text="LuongTrung"
                android:layout_marginStart="20dp"
                android:layout_below="@id/tvTitle"
                android:textSize="15sp"/>
            
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_person_4_24"
                android:layout_alignParentEnd="true"
                android:layout_margin="30dp"
                app:civ_border_width="1dp"
                app:civ_border_color="#CCCCCC"/>
        </RelativeLayout>

       <View
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="#CCCCCC" />

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvBookingDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/01/2"
                app:drawableStartCompat="@drawable/baseline_calendar_month_24"
                android:drawablePadding="5dp"/>

            <Space
                android:layout_width="30dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/tvBookingTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/01/2"
                app:drawableStartCompat="@drawable/ic_clock"
                android:drawablePadding="5dp"/>
            <Space
                android:layout_width="30dp"
                android:layout_height="0dp"/>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/01/2"
                app:drawableStartCompat="@drawable/ic_check"
                android:drawablePadding="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="#92FFFFFF">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/custom_button"
                app:backgroundTint="@color/primary_color"
                android:text="Hủy"/>

            <Space
                android:layout_width="30dp"
                android:layout_height="1dp"/>

            <Button
                android:id="@+id/btnReschedule"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/custom_button"
                app:backgroundTint="@color/primary_color"
                android:text="Đặt lại"/>
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>